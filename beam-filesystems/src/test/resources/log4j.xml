<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
 
<log4j:configuration xmlns:log4j=
              "http://jakarta.apache.org/log4j/"
               debug="false">
 
   <appender name="consoleAppender"
      class="org.apache.log4j.ConsoleAppender">
      <param name="Threshold" value="INFO" />
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d [%t] %-5p %c{1} - %m%n" />
      </layout>
   </appender>
 
   <appender name="debugFileAppender"
           class="org.apache.log4j.RollingFileAppender">
      <param name="Threshold" value="DEBUG" />
      <param name="File" value="BEAM.log"/>
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
      </layout>
   </appender>
 
   <logger name="org.apache.pdfbox" additivity="false" >
      <level value="ERROR" />
      <appender-ref ref="consoleAppender"/>
   </logger>
  
   <logger name="uk.ac.ox.bodleian" additivity="false" >
      <appender-ref ref="consoleAppender"/>
      <appender-ref ref="debugFileAppender"/>
   </logger>
 
   <logger name="net.didion.loopy.iso9660.ISO9660VolumeDescriptorSet" additivity="false" >
      <appender-ref ref="consoleAppender"/>
      <appender-ref ref="debugFileAppender"/>
   </logger>

</log4j:configuration>